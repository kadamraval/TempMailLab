/**
 * @fileoverview Firestore Security Rules for TempInbox application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict separation between public and private data.
 * - Public collections (/plans, /allowed_domains) are readable by anyone to allow for public pages.
 * - Private user data (/users/{userId}) is strictly owned and accessible only by the authenticated user.
 * - Admin write access is controlled by a custom claim `isAdmin`.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //============================================
    // Helper Functions
    //============================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // In production, this claim must be set on the user via a trusted backend.
      return isSignedIn() && request.auth.token.isAdmin == true;
    }

    //============================================
    // Public Collections
    //============================================

    match /plans/{planId} {
      // Anyone can read plans for the pricing page.
      allow get, list: if true;
      // Only admins can change plans.
      allow write: if isAdmin();
    }
    
    match /allowed_domains/{allowedDomainId} {
      // Anyone can read the list of domains available.
      allow get, list: if true;
      // Only admins can manage the domain pool.
      allow write: if isAdmin();
    }
    
    match /admin_settings/{settingId} {
        // Only admins can read or write sensitive third-party API keys.
        allow read, write: if isAdmin();
    }

    //============================================
    // Private User Data
    //============================================

    match /users/{userId} {
      // Admins can list users for the admin dashboard. Other users cannot.
      allow list: if isAdmin();
      // A user can get their own document. Admins can also get any user doc.
      allow get: if isOwner(userId) || isAdmin();
      // A user can create their own document, ensuring the ID matches.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      // A user can update their own document. Admins can also update user docs.
      allow update: if isOwner(userId) || isAdmin();
      // A user can delete their own document. Admins can also delete users.
      allow delete: if isOwner(userId) || isAdmin();

      // --- Nested User Subcollections ---
      
      match /inboxes/{inboxId} {
        allow read, write: if isOwner(userId);

        match /emails/{emailId} {
          allow read, write: if isOwner(userId);
        }
      }
      
      match /api_keys/{apiKeyId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Default deny all other collections.
    match /{path=**} {
        // This is a catch-all to ensure any path not explicitly matched
        // is denied by default. It's good practice but redundant if all
        // top-level collections are covered.
        allow read, write: if false;
    }
  }
}
