
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    //============================================
    // Helper Functions
    //============================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // In production, this claim must be set on the user via a trusted backend.
      return isSignedIn() && request.auth.token.isAdmin == true;
    }

    //============================================
    // Public Collections
    //============================================

    // Rule for LISTING plans (the collection itself)
    match /plans {
      allow list: if true;
    }

    // Rule for GETTING a single plan (a document in the collection)
    match /plans/{planId} {
      allow get: if true;
      // Only admins can change plans.
      allow write: if isAdmin();
    }
    
    match /allowed_domains/{allowedDomainId} {
      // Anyone can read the list of domains available.
      allow get, list: if true;
      // Only admins can manage the domain pool.
      allow write: if isAdmin();
    }
    
    match /admin_settings/{settingId} {
        // Only admins can read or write sensitive third-party API keys.
        // This is still subject to server-side validation.
        allow read, write: if isAdmin();
    }

    //============================================
    // Private User Data
    //============================================

    match /users/{userId} {
      // Admins can list users for the admin dashboard. Other users cannot.
      allow list: if isAdmin();
      // A user can get their own document. Admins can also get any user doc.
      allow get: if isOwner(userId) || isAdmin();
      // A user can create their own document, ensuring the ID matches.
      allow create: if isOwner(userId) && request.resource.data.uid == userId;
      // A user can update their own document. Admins can also update user docs.
      allow update: if isOwner(userId) || isAdmin();
      // A user can delete their own document. Admins can also delete users.
      allow delete: if isOwner(userId) || isAdmin();
    }

    // --- Standalone User Subcollections for Clarity ---
    
    match /inboxes/{inboxId} {
      // Assuming inbox doc contains a 'userId' field.
      allow read, write: if isOwner(resource.data.userId);
    }
    
    match /emails/{emailId} {
        // This is less secure without context. A better rule would check
        // the parent inbox's owner. For now, this requires a 'userId' field
        // in the email document itself.
        allow read, write: if isOwner(resource.data.userId);
    }
    
    match /api_keys/{apiKeyId} {
      allow read, write: if isOwner(resource.data.userId);
    }
  }
}
