/**
 * @fileoverview Firestore Security Rules for TempInbox application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict separation between public and private data.
 * - Public data (like '/plans') is readable by anyone to allow for public pricing pages.
 * - Private user data (like '/users/{userId}') is strictly owned and accessible only by the authenticated user.
 * - Admin write access is controlled by a custom claim `isAdmin`.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //============================================
    // Helper Functions
    //============================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && request.auth.token.isAdmin == true;
    }

    //============================================
    // Public Collections
    //============================================

    match /plans/{planId} {
      // Anyone can read plans for the pricing page.
      allow get, list: if true;
      // Only admins can change plans.
      allow write: if isAdmin();
    }
    
    match /allowed_domains/{allowedDomainId} {
      // Anyone can read the list of domains available.
      allow get, list: if true;
      // Only admins can manage the domain pool.
      allow write: if isAdmin();
    }

    //============================================
    // Private User Data
    //============================================

    match /users/{userId} {
      // A user can get their own document.
      allow get: if isOwner(userId);

      // Nobody can list all users.
      allow list: if false;

      // A user can create their own document, ensuring the ID matches.
      allow create: if isOwner(userId) && request.resource.data.uid == userId;
      
      // A user can update their own document.
      allow update: if isOwner(userId);
      
      // A user can delete their own document.
      allow delete: if isOwner(userId);

      // --- Nested User Subcollections ---
      
      match /inboxes/{inboxId} {
        allow read, write: if isOwner(userId);

        match /emails/{emailId} {
          allow read, write: if isOwner(userId);
        }
      }
      
      match /api_keys/{apiKeyId} {
        allow read, write: if isOwner(userId);
      }
    }

    //============================================
    // Admin & System Collections
    //============================================

    match /admin_settings/{settingId} {
      // Only admins can read or write sensitive third-party API keys.
      allow read, write: if isAdmin();
    }
    
    // Default deny all other collections.
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
