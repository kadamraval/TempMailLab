rules_version = '2';

// Helper functions to improve readability
function isUserAuthenticated() {
  return request.auth != null;
}

function isOwner(userId) {
  return request.auth.uid == userId;
}

function isAdmin() {
  // In a real app, this would be more secure, e.g., checking a custom claim
  // For now, we assume an admin has a specific property in their user document
  return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
}

service cloud.firestore {
  match /databases/{database}/documents {
    
    // PUBLIC READ-ONLY ACCESS
    // Anyone (authenticated or not) can read plans and allowed domains
    match /plans/{planId} {
      allow get: if true;
    }
    match /plans {
      allow list: if true;
    }

    match /allowed_domains/{domainId} {
      allow get: if true;
    }
    match /allowed_domains {
       allow list: if true;
    }

    // USER-SPECIFIC DATA
    // Users can only create their own user document and can read/write their own sub-collections.
    match /users/{userId} {
      allow get, update, delete: if isOwner(userId);
      allow create: if isUserAuthenticated();
    }
    
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    // ADMIN-ONLY ACCESS
    // These collections can only be written to by an admin.
    match /admin_settings/{settingId} {
       // Allow read for authenticated server actions. Deny client reads.
       allow read: if isUserAuthenticated();
       allow write: if isAdmin();
    }
    
    // Only admins can modify plans and allowed domains
    match /plans/{planId} {
      allow write: if isAdmin();
    }
    match /allowed_domains/{domainId} {
      allow write: if isAdmin();
    }

  }
}
