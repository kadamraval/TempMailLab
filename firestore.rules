
rules_version = '2';

// Helper functions to improve readability
function isUserAuthenticated() {
  return request.auth != null;
}

function isOwner(userId) {
  return request.auth.uid == userId;
}

function isAdmin() {
  // In a real app, this would be more secure, e.g., checking a custom claim
  // For now, we assume an admin has a specific property in their user document
  // This is a placeholder and should be secured before production.
  return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
}

service cloud.firestore {
  match /databases/{database}/documents {
    
    // PUBLIC & ANONYMOUS READ-ONLY ACCESS
    // Anyone can read plans and allowed domains
    match /plans/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /allowed_domains/{document=**} {
       allow read: if true;
       allow write: if isAdmin();
    }

    // USER-SPECIFIC DATA
    // Users can only create their own user document and can read/write their own sub-collections.
    match /users/{userId} {
      allow get, update, delete: if isOwner(userId);
      // Allow user creation if the user is authenticated and is the owner.
      allow create: if isOwner(userId);
    }
    
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    // ADMIN-ONLY ACCESS
    // These collections can only be written to by an admin.
    match /admin_settings/{settingId} {
       // Allow server-side actions to read/write settings. Deny client reads/writes.
       allow read, write: if isAdmin();
    }
  }
}
