
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Publicly Readable Collections ---
    match /plans/{planId} {
      allow get, list: if true;
      allow write: if false; 
    }

    match /menus/{menuId} {
      allow get, list: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /allowed_domains/{domainId} {
      allow read: if true;
      // Allow admin to write/delete
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    match /sections/{sectionId} {
      allow get, list: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Allow admins to write to any page document
    match /pages/{pageId} {
      allow get: if true; // A single page is public
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true; // Admins can list all pages
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Allow admins to write to any subcollection within a page
    match /pages/{pageId}/{sectionCollection}/{sectionDocId} {
        allow get: if true; // Content and styles are public
        allow list: if true;
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /posts/{postId} {
      // Allow anyone to read a single published post, or any admin to read any post.
      allow get, list: if true;

      // Only allow admins to create, update, or delete blog posts.
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /categories/{categoryId} {
      // Allow anyone to read categories
      allow get, list: if true;
      // Only allow admins to create, update, or delete categories
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // --- Admin-Only Collections ---
    match /admin_settings/{settingId} {
        // Allow public read for analytics and ads, but protect all other settings.
        allow get: if settingId == 'google-analytics' || settingId == 'google-adsense';
        // Only admins can write to any setting or read other sensitive settings.
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // --- User Data ---
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // --- Inboxes & Emails ---
    match /inboxes/{inboxId} {
      // Allow a registered user to create an inbox for themselves.
      // Allow ANYONE (including unauthenticated guests) to create an inbox if it does NOT have a userId field.
      allow create: if (request.auth != null && request.resource.data.userId == request.auth.uid)
                    || (request.auth == null && !("userId" in request.resource.data));

      // Allow a registered user to read or delete their own inbox.
      // Allow ANYONE to read a guest inbox (one without a userId).
      allow read, delete: if (request.auth != null && resource.data.userId == request.auth.uid)
                          || (!("userId" in resource.data));
      
      // Updates are disallowed from the client to prevent tampering.
      allow update: if false;


      // Secure list operation: only allow querying for one's own inboxes (for registered users).
      allow list: if request.auth != null && request.query.where['userId'] == request.auth.uid;
    }

    match /inboxes/{inboxId}/emails/{emailId} {
        // Disallow all direct client creation. Creation must only happen via the secure webhook.
        allow create: if false;

        // Allow reading emails if the user owns the parent inbox OR if the parent inbox is a guest inbox.
        allow read, list: if (request.auth != null && get(/databases/$(database)/documents/inboxes/$(inboxId)).data.userId == request.auth.uid)
                           || (!("userId" in get(/databases/$(database)/documents/inboxes/$(inboxId)).data));

        // Allow updating only if the user owns the parent inbox (e.g., to mark as read).
        allow update: if request.auth != null && get(/databases/$(database)/documents/inboxes/$(inboxId)).data.userId == request.auth.uid;
                             
        // Deletion of emails is disallowed from the client for data integrity.
        allow delete: if false;
    }

  }
}

    