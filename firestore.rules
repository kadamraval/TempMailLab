
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Publicly Readable Collections ---
    match /plans/{planId} {
      allow get, list: if true;
      allow write: if false; 
    }

    match /allowed_domains/{domainId} {
      allow read: if true;
      // Allow admin to write/delete
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // --- Admin-Only Collections ---
    match /admin_settings/{settingId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // --- User & Inbox Collections ---
    match /users/{userId} {
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
    }
    
    match /inboxes/{inboxId} {
      // Allow any authenticated user (including anonymous) to create an inbox.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow a user to read, update, or delete an inbox if they are the logged-in owner.
      // An anonymous user's client must provide the ownerToken to read the inbox.
      allow read, update, delete: if (request.auth != null && resource.data.userId == request.auth.uid);

      // Allow a registered (non-anonymous) user to list their own inboxes.
      allow list: if request.auth != null && !request.auth.token.firebase.sign_in_provider.endsWith('anonymous') && request.query.where[0][0] == "userId" && request.query.where[0][2] == request.auth.uid;
    }

    match /inboxes/{inboxId}/emails/{emailId} {
        // Allow a user to read a single email if they own it (based on the denormalized userId).
        allow read: if request.auth.uid == resource.data.userId;

        // Allow a user to list emails ONLY if they are querying for their own userId.
        // This is the CRITICAL fix that enforces the client-side query must contain `where('userId', '==', request.auth.uid)`.
        allow list: if request.auth.uid == request.query.where[0][2] && request.query.where[0][0] == "userId";
                             
        // Creation of emails is only allowed by the trusted server-side action (backend).
        // This rule effectively denies client-side creation.
        allow create: if false;
        
        // Allow an authenticated user to update their own emails (e.g. mark as read)
        allow update: if request.auth.uid == resource.data.userId;
        
        // Deny direct client-side deletes.
        allow delete: if false;
    }

  }
}
