rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Publicly Readable Collections ---
    match /plans/{planId} {
      allow get, list: if true;
      allow write: if false; 
    }

    match /allowed_domains/{domainId} {
      allow read: if true;
      // Allow admin to write/delete
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    match /sections/{sectionId} {
      allow get, list: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Rule for the page document itself
    match /pages/{pageId} {
      allow get: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Rule for subcollections within a page
    match /pages/{pageId}/{sectionCollection}/{sectionDocId} {
        allow get, list: if true;
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /posts/{postId} {
      // Public: read any published post, Admins: read any post
      allow read: if (resource.data.status == 'published') || (request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      
      // Only admin can create/update/delete
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /categories/{categoryId} {
      // Allow anyone to read categories
      allow get, list: if true;
      // Only allow admins to create, update, or delete categories
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // --- Admin-Only Collections ---
    match /admin_settings/{settingId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // --- User Data ---
    match /users/{userId} {
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- Inboxes & Emails ---
    match /inboxes/{inboxId} {
      // Allow any authenticated user (including anonymous) to create an inbox for themselves.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow a user to read or delete an inbox if they are the owner.
      allow read, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Block client-side updates. These are handled by secure backend functions.
      allow update: if false;

      // Secure list operation: only allow querying for one's own inboxes.
      allow list: if request.auth != null && request.query.where['userId'] == request.auth.uid;
    }

    match /inboxes/{inboxId}/emails/{emailId} {
        // Disallow all direct client creation. Creation must only happen via the secure webhook.
        allow create: if false;

        // Allow a user to read or update their own emails by checking the parent inbox's ownership.
        allow read, list, update: if request.auth != null && get(/databases/$(database)/documents/inboxes/$(inboxId)).data.userId == request.auth.uid;
                             
        // Deletion of emails is disallowed from the client for data integrity.
        allow delete: if false;
    }

  }
}
