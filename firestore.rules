
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Publicly Readable Collections ---

    match /plans/{planId} {
      allow read: if true;
      allow write: if false; // Deny all client-side writes.
    }

    match /allowed_domains/{domainId} {
      allow read: if true;
      allow write: if false; // Deny all client-side writes.
    }
    
    // --- Admin-Only Collections ---

    match /admin_settings/{settingId} {
        allow write: if false; // NEVER allow client-side writes.
        // Allow any authenticated user to read mailgun settings for server-side fetching
        allow read: if request.auth != null && settingId == 'mailgun';
    }

    // --- User & Inbox Collections ---

    match /users/{userId} {
      // Admins can list all users.
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      // Users can read their own profile. Admins can read any profile.
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      // Users can update their own profile. Admins can update any profile.
      // New users can create their own profile.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /inboxes/{inboxId} {
      // Allow a user to create an inbox if the new document's userId matches their own UID.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow a user to read, update, or delete an inbox only if they are the owner.
      // Admins can also perform these actions.
      allow read, update, delete: if request.auth != null && (get(/databases/$(database)/documents/inboxes/$(inboxId)).data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);

      // Allow a user to list only their own inboxes.
      allow list: if request.auth != null && request.query.where.field == "userId" && request.query.where.value == request.auth.uid;
    }

    // --- Default Deny ---
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
