
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Make the 'plans' collection publicly readable for pricing pages.
    match /plans/{planId} {
      allow read: if true;
      allow write: if false; // Secure: No public writes
    }

    // Allow logged-in users to read their own user profile.
    // Allow users to create their own profile upon sign-up.
    // Allow users to update their own profile, but not change critical fields.
    match /users/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // Allow anyone to read the list of allowed domains for generating emails.
    // Only admins should be able to write/edit these.
    match /allowed_domains/{domainId} {
        allow read: if true;
        allow write: if false; // Deny all writes for now.
    }
    
    // Admin settings should be private and only accessible by server-side logic
    // (which uses admin credentials and bypasses these rules).
    match /admin_settings/{settingId} {
        allow read, write: if false;
    }
    
    // Default-deny all other collections/documents not explicitly matched above.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
