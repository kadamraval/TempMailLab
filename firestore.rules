rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /inboxes/{inboxId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    match /inboxes/{inboxId}/emails/{emailId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/inboxes/$(inboxId)).data.userId == request.auth.uid;
    }

    match /plans/{planId} {
      allow read: if true;
      allow write: if false;
    }

    match /allowed_domains/{domainId} {
      allow read: if true;
      allow write: if false;
    }

    match /admin_settings/{settingId} {
      allow read, write: if false; // Should only be accessed by server actions
    }
  }
}
