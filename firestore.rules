
rules_version = '2';

// Helper functions to improve readability
function isUserAuthenticated() {
  return request.auth != null;
}

function isOwner(userId) {
  return request.auth.uid == userId;
}

function isAdmin() {
  // In a real app, this would be more secure, e.g., checking a custom claim
  // For now, we assume an admin has a specific property in their user document
  return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
}

service cloud.firestore {
  match /databases/{database}/documents {
    
    // PUBLIC ACCESS
    // Allow anyone (authenticated or not) to read plans and allowed domains
    match /plans/{planId} {
      allow get: if true;
    }
    match /plans {
      allow list: if true;
    }

    match /allowed_domains/{domainId} {
      allow get: if true;
    }
    match /allowed_domains {
       allow list: if true;
    }

    // USER-SPECIFIC DATA
    // Users can only access their own data.
    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if isUserAuthenticated();
    }
    
    match /users/{userId}/inboxes/{inboxId} {
      allow read, write, delete: if isOwner(userId);
    }
    
    match /users/{userId}/inboxes/{inboxId}/emails/{emailId} {
      allow read, write, delete: if isOwner(userId);
    }

    // ADMIN-ONLY ACCESS
    // These collections can only be written to by an admin.
    // They are globally readable for app functionality.
    match /admin_settings/{settingId} {
       allow read: if isUserAuthenticated(); // Allow read for authenticated server actions
       allow write: if isAdmin();
    }
    
    // Only admins can modify plans and allowed domains
    match /plans/{planId} {
      allow write: if isAdmin();
    }
    match /allowed_domains/{domainId} {
      allow write: if isAdmin();
    }

    // Fallback security: deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
