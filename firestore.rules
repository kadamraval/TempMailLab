
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    //============================================
    // Helper Functions
    //============================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.isAdmin == true;
    }

    //============================================
    // Public Collections
    //============================================

    match /plans/{planId} {
      // Anyone can read plans for the pricing page. Only admins can write.
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /allowed_domains/{allowedDomainId} {
      // Authenticated users can read the list of domains. Only admins can write.
      allow get, list: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /admin_settings/{settingId} {
      // Only admins can read or write sensitive third-party API keys.
      allow read, write: if isAdmin();
    }

    //============================================
    // User-Owned Collections
    //============================================

    match /users/{userId} {
      // A user can read/write their own document. Admins have full access.
      allow get, update, delete: if isOwner(userId) || isAdmin();
      // Allow users to create their own user document.
      allow create: if isOwner(userId);
      // Admins can list all users.
      allow list: if isAdmin();
    }

    match /users/{userId}/inboxes/{inboxId} {
      // Users can only access their own inboxes.
      allow read, write, delete: if isOwner(userId);
    }
    
    match /users/{userId}/inboxes/{inboxId}/emails/{emailId} {
        // Users can only access emails within their own inboxes.
        allow read, write, delete: if isOwner(userId);
    }

    match /users/{userId}/api_keys/{apiKeyId} {
      // Users can only manage their own API keys.
      allow read, write, delete: if isOwner(userId);
    }
  }
}
