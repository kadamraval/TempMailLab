
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Publicly Readable Collections ---

    // Allow anyone to read the list of plans and individual plan documents.
    match /plans/{planId} {
      allow get, list: if true;
      allow write: if false; // Deny all client-side writes.
    }

    // Allow anyone to read the list of allowed domains and individual domain documents.
    match /allowed_domains/{domainId} {
      allow get, list: if true;
      allow write: if false; // Deny all client-side writes.
    }
    
    // --- Admin-Only Collections ---

    // Admin settings should be private and only accessible by server-side logic
    // (which uses admin credentials and bypasses these rules).
    match /admin_settings/{settingId} {
        allow read, write: if false;
    }

    // --- User-Specific, Private Collections ---

    // Allow any authenticated user (including anonymous) to create, read, update,
    // and delete documents within their own user-specific subcollections.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- Default Deny ---

    // By default, deny read/write access to all other collections and documents
    // that are not explicitly matched by one of the rules above.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
