
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Publicly Readable Collections ---
    match /plans/{planId} {
      allow read: if true;
      allow write: if false; 
    }

    match /allowed_domains/{domainId} {
      allow read: if true;
      allow write: if false; 
    }
    
    // --- Admin-Only Collections ---
    match /admin_settings/{settingId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // --- User & Inbox Collections ---
    match /users/{userId} {
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
    }
    
    match /inboxes/{inboxId} {
      // Allow a user (including anonymous) to create an inbox.
      // For anonymous, client generates and saves ownerToken.
      allow create: if request.resource.data.userId == request.auth.uid;
      
      // Allow a user to read, update, or delete an inbox if they are the logged-in owner.
      // OR if they are anonymous and provide the correct ownerToken.
      allow read, update, delete: if (request.auth != null && resource.data.userId == request.auth.uid) || 
                                     (request.auth == null && request.resource.data.ownerToken == resource.data.ownerToken);

      // Allow a registered user to list their own inboxes. Anonymous users cannot list.
      allow list: if request.auth != null && request.query.where[0][0] == "userId" && request.query.where[0][2] == request.auth.uid;
    }

    match /inboxes/{inboxId}/emails/{emailId} {
        // Allow reads/lists if the user is the logged-in owner of the parent inbox.
        // OR if the user is anonymous and provides the correct ownerToken for the parent inbox.
        allow read, list: if (request.auth != null && get(/databases/$(database)/documents/inboxes/$(inboxId)).data.userId == request.auth.uid) ||
                             (request.auth == null && request.resource.data.ownerToken == get(/databases/$(database)/documents/inboxes/$(inboxId)).data.ownerToken);
                             
        // Allow server-side action to create emails. The action provides the ownerToken for validation.
        allow create: if get(/databases/$(database)/documents/inboxes/$(inboxId)).data.ownerToken == request.resource.data.ownerToken ||
                       get(/databases/$(database)/documents/inboxes/$(inboxId)).data.userId == request.auth.uid;
        
        // Deny direct client-side updates/deletes.
        allow update, delete: if false;
    }

  }
}
