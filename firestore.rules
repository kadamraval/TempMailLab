
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // This is a temporary, minimal ruleset for debugging.
    // It locks down the entire database except for the 'plans' collection
    // to confirm if this rules file is being correctly applied.
    match /plans/{planId} {
        allow read, write: if true;
    }
  }
}
