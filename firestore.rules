
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Publicly Readable Collections ---

    match /plans/{planId} {
      allow read: if true;
      allow write: if false; // Deny all client-side writes.
    }

    match /allowed_domains/{domainId} {
      allow read: if true;
      allow write: if false; // Deny all client-side writes.
    }
    
    // --- Admin-Only Collections ---

    match /admin_settings/{settingId} {
        allow write: if false; // NEVER allow client-side writes.
        allow read: if request.auth != null && settingId == 'mailgun';
    }

    // --- User & Inbox Collections ---

    match /users/{userId} {
      allow list: if request.auth != null; 
      allow read, write: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
    }
    
    match /inboxes/{inboxId} {
      // Allow users to read, write, and list their own inboxes.
      // A user can create an inbox if the new document's userId matches their own.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // An existing inbox can only be read or modified by its owner.
      allow read, update, delete, list: if request.auth != null && get(/databases/$(database)/documents/inboxes/$(inboxId)).data.userId == request.auth.uid;
    }

    // --- Default Deny ---
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
